@model MusicService1.Models.Song

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Song</h4>
<hr />
<div class="row">
    <div class="col-md-12 song-frame-main-1"><!-- enctype-->
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-3 create-song" style="height:350px">
                    <label asp-for="Name" class="control-label"></label>
                    <hr style="color:tomato; background-color:tomato" />
                    <img src="/img/musicTitle.gif" alt="Alternate Text" />
                    <hr style="color:tomato; background-color:tomato" />
                    <label>Title:</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3 create-song" style="height:350px">
                    <label asp-for="Audio" class="control-label"></label>
                    <hr style="color:tomato; background-color:tomato" />
                    <img src="/img/audioField.gif" alt="Alternate Text" />
                    <hr style="color:tomato; background-color:tomato" />
                    <input asp-for="Audio" class="form-control" type="file" />
                    <span asp-validation-for="Audio" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3 create-song" style="height:350px">
                    <label asp-for="Image" class="control-label"></label>
                    <hr style="color:tomato; background-color:tomato" />
                    <img src="/img/photoField.gif" alt="Alternate Text" />
                    <hr style="color:tomato; background-color:tomato" />
                    <input asp-for="Image" class="form-control" type="file" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3 create-song" style="height:350px">
                    <label asp-for="GenreId" class="control-label"></label>
                    <hr style="color:tomato; background-color:tomato" />
                    <img src="/img/genreField.gif" alt="Alternate Text" />
                    <hr style="color:tomato; background-color:tomato" />
                    <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
                </div>
            </div>

            
            <div class="form-group" style="margin-top:10px; margin-left:10px">
                <input type="submit" value="Create" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="link-song">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
